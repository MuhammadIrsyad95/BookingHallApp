@model ResetPasswordVM

<style>
    .login-card {
        max-width: 400px; /* Atur lebar maksimum kotak login */
        margin: auto; /* Pusatkan kotak */
    }

        /* Hilangkan garis bawah pada semua link di dalam login card */
        .login-card a {
            text-decoration: none;
        }

            /* Opsional: Menambahkan garis bawah saat hover */
            .login-card a:hover {
                text-decoration: underline;
            }
</style>

<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow border login-card">
                <div class="card-header bg-success text-white text-center">
                    <h2>Reset Password</h2>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Username" type="hidden" />

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" />
                            <label asp-for="Password">New Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div>
                            <button type="submit" class="w-100 btn btn-lg btn-outline-success">Reset Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
